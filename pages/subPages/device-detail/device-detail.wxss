.detail-wrapper {
  background-color: #fff;
  height: 100vh;
  font-size: 28rpx;
}

.detail-header {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100vw;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: #f5f5f5;
}

.result-list {
  margin-top: 88rpx;
}

.ble-box {
  padding-bottom: 20rpx;
  border-bottom: 20rpx solid #f5f5f5;
}

.ble-section {
  position: relative;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 1px solid #f0f0f0;
}

.ble-info {
  margin: 0 20rpx;
  font-size: 26rpx;
  color: #666;
  width: 95%;
}

.ble-info>view {
  margin-bottom: 6rpx;
}

.ble-name {
  font-size: 34rpx;
  color: #333;
  padding-right: 10rpx;
}



