.search-wrapper {
  background-color: #fff;
  height: 100vh;
  font-size: 28rpx;
}

.search-header {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100vw;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: #f5f5f5;
}


.search-input {
  flex-grow: 1;
  margin-right: 20rpx;
  background: #fff;
  color: #999;
  border-radius: 10rpx;
  border: 1px solid #e6e6e6;
  height: 60rpx;
  box-sizing: border-box;
  padding-left: 50rpx;
}

.icon-search {
  position: absolute;
  top: 50%;
  left: 40rpx;
  font-size: 26rpx;
  transform: translateY(-45%);
  color: #999;
}

.result-list {
  margin-top: 88rpx;
}

.ble-box {
  padding-bottom: 20rpx;
  border-bottom: 20rpx solid #f5f5f5;
}
.ble-section {
  position: relative;
  display: flex;
  align-items: center;
  height: 228rpx;
  padding: 0 30rpx;
  border-top: 1px solid #f0f0f0;
}
.ble-info {
  margin: 0 20rpx;
  font-size: 26rpx;
  color: #666;
  width: 95%;
}
.ble-info>view {
  margin-bottom: 6rpx;
}

.ble-name {
  font-size: 34rpx;
  color: #333;
  padding-right: 10rpx;
}

